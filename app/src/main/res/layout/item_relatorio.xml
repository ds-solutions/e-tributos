<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_item_relatorio"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center|center_horizontal|center_vertical" />

        <TextView
            android:id="@+id/id_titulo_indice_relatorio"
            android:layout_width="match_parent"
            android:layout_height="103dp"
            android:gravity="center"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/id_text_dados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:maxLines="4"
        android:minLines="1"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/id_layout_resumo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/id_resumo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="@string/resumo"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/id_text_resumo_dados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5sp"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>